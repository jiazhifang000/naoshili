<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jianhuyi.news.dao.NewsDao">

	<select id="get" resultType="com.jianhuyi.news.domain.NewsDO">
		select t_news.id,t_news.u_id,t_news.title,t_news.content,t_news.tupianurl,t_news.clicks,t_news.praises,t_news.replies,t_news.last_reply_id,t_news.is_top,t_news.check_status,t_news.create_time from t_news where id = #{value}
	</select>

	<select id="list" resultType="com.jianhuyi.news.domain.NewsDO">
		select t_news.id,t_news.u_id,t_news.update_time,t_expert.doctor_name doctorName,t_news.title,t_news.content,t_news.tupianurl,t_news.clicks,t_news.praises,t_news.replies,t_news.last_reply_id,t_news.is_top,t_news.check_status,t_news.create_time from t_news
        ,t_expert
        where t_news.u_id=t_expert.id  and t_news.deleted=0
		  		  <if test="id != null and id != ''"> and t_news.id = #{id} </if>
		  		  <if test="uId != null and uId != ''"> and t_news.u_id = #{uId} </if>
		  		
		  		  <if test="title != null and title != ''"> and t_news.title = #{title} </if>
		  		  <if test="content != null and content != ''"> and t_news.content = #{content} </if>
		  		  <if test="tupianurl != null and tupianurl != ''"> and t_news.tupianurl = #{tupianurl} </if>
		  		  <if test="clicks != null and clicks != ''"> and t_news.clicks = #{clicks} </if>
		  		  <if test="praises != null and praises != ''"> and t_news.praises = #{praises} </if>
		  		  <if test="replies != null and replies != ''"> and t_news.replies = #{replies} </if>
		  		  <if test="lastReplyId != null and lastReplyId != ''"> and t_news.last_reply_id = #{lastReplyId} </if>
		  		  <if test="isTop != null and isTop != ''"> and t_news.is_top = #{isTop} </if>
		  		  <if test="checkStatus != null and checkStatus != ''"> and t_news.check_status = #{checkStatus} </if>
		  		  <if test="createTime != null and createTime != ''"> and t_news.create_time = #{createTime} </if>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_news 
		  where deleted=0
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="uId != null and uId != ''"> and u_id = #{uId} </if>
		  		 
		  		  <if test="title != null and title != ''"> and title = #{title} </if>
		  		  <if test="content != null and content != ''"> and content = #{content} </if>
		  		  <if test="tupianurl != null and tupianurl != ''"> and tupianurl = #{tupianurl} </if>
		  		  <if test="clicks != null and clicks != ''"> and clicks = #{clicks} </if>
		  		  <if test="praises != null and praises != ''"> and praises = #{praises} </if>
		  		  <if test="replies != null and replies != ''"> and replies = #{replies} </if>
		  		  <if test="lastReplyId != null and lastReplyId != ''"> and last_reply_id = #{lastReplyId} </if>
		  		  <if test="isTop != null and isTop != ''"> and is_top = #{isTop} </if>
		  		  <if test="checkStatus != null and checkStatus != ''"> and check_status = #{checkStatus} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		
	</select>
	 
	<insert id="save" parameterType="com.jianhuyi.news.domain.NewsDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_news
		(
			`u_id`, 
			
			`title`, 
			`content`, 
			`tupianurl`, 
			`clicks`, 
			`praises`, 
			`replies`, 
			`last_reply_id`, 
			`is_top`, 
			`check_status`, 
			`create_time`,
			 update_time
		)
		values
		(
			#{uId}, 
			
			#{title}, 
			#{content}, 
			#{tupianurl}, 
			#{clicks}, 
			#{praises}, 
			#{replies}, 
			#{lastReplyId}, 
			#{isTop}, 
			#{checkStatus}, 
			#{createTime},
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.jianhuyi.news.domain.NewsDO">
		update t_news 
		<set>
			<if test="uId != null">`u_id` = #{uId}, </if>
			<if test="deleted != null">`deleted` = #{deleted}, </if>
			<if test="title != null">`title` = #{title}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="tupianurl != null">`tupianurl` = #{tupianurl}, </if>
			<if test="clicks != null">`clicks` = #{clicks}, </if>
			<if test="praises != null">`praises` = #{praises}, </if>
			<if test="replies != null">`replies` = #{replies}, </if>
			<if test="lastReplyId != null">`last_reply_id` = #{lastReplyId}, </if>
			<if test="isTop != null">`is_top` = #{isTop}, </if>
			<if test="checkStatus != null">`check_status` = #{checkStatus}, </if>
			<if test="createTime != null">`create_time` = #{createTime},</if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_news where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_news where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>